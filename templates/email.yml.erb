production:
  delivery_method: :smtp
  smtp_settings:
    tls: <%= scope.lookupvar('redmine::mail_tls') %>
    address: "<%= scope.lookupvar('redmine::mail_smtp') %>"
    port: <%= scope.lookupvar('redmine::mail_port') %>
    domain: "<%= scope.lookupvar('redmine::mail_domain') %>"
    authentication: :<%= scope.lookupvar('redmine::mail_auth') %>
    user_name: "<%= scope.lookupvar('redmine::mail_user') %>@<%= scope.lookupvar('redmine::mail_domain') %>"
    password: "<%= scope.lookupvar('redmine::mail_pass') %>"
